{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "globals": {
    "atom": true
  },
  "env": {
    "node": true
  },
  "rules": {
    "max-len": [1, 120, { "tabWidth": 2, "ignoreComments": true }],
    "global-require": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
  }
}
